					Focused 		= "Image 0-tab-separator-FocusedALT.png"
					Unfocused 		= "Image 0-tab-separator-UnocusedALT.png"
					}

			Font {
					Focused         = "$FONT_TITLE"
					FocusedSelected = "$FONT_TITLE2"
					Unfocused       = "$FONT_TITLE"
					UnfocusedSelected = "$FONT_TITLE"
					}

			FontColor {
					Focused 		= "#cccccc"
					FocusedSelected = "#EBFA60"                             
					Unfocused 		= "#cccccc"
					UnfocusedSelected = "#cccccc"
					}

			Buttons {
				Right {
